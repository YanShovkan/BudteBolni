<Window x:Class="PolyclinicMeteringProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyclinicMeteringProgram"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
  
        <Menu Grid.Row="0" VerticalAlignment="Top" FontSize="16">
            <MenuItem Name="miTreatments" Header="Лечения" Click="miTreatments_Click" />
            <MenuItem Name="miProcedures" Header="Процедуры" Click="miProcedures_Click"/>
            <MenuItem Name="miPatients" Header="Пациенты" Click="miPatients_Click"/>
            <MenuItem Name="miGetList" Header="Получение списка" Click="miGetList_Click"/>
            <MenuItem Name="miGetReport" Header="Отчет" Click="miGetReport_Click"/>
            <MenuItem Name="miGraph" Header="График" Click="miGraph_Click" />
            <MenuItem Name="miExit" Header="Выход" Click="miExit_Click" />
            <Separator />
        </Menu>

        <Image Grid.Row="1" Source="resources\Logo.jpg"/>
    </Grid>
    
</Window>
