<Window x:Class="PolyclinicProgramForPharmacist.AddMedicine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyclinicProgramForPharmacist"
        mc:Ignorable="d"
         Title="Добавление лекарства" Height="113.702" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Название лекарства: " Grid.Column="0" Margin="5" HorizontalAlignment="Right" FontSize="16" VerticalAlignment="Center"/>
        <ComboBox Name="cbMedicineName" Grid.Column="1" Margin="5" />

        <Button Name="btnAdd" Grid.Column="0" Grid.Row="1" Margin="5" Content="Добавить" FontSize="16" Click="btnAdd_Click"/>
        <Button Name="btnCancel"  Grid.Column="1" Grid.Row="1" Margin="5" Content="Отмена" FontSize="16" Click="btnCancel_Click"/>
    </Grid>
</Window>
