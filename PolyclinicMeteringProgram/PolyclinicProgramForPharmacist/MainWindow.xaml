<Window x:Class="PolyclinicProgramForPharmacist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyclinicProgramForPharmacist"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" VerticalAlignment="Top" FontSize="16">
            <MenuItem Name="miMedicine" Header="Лекарства" Click="miMedicine_Click"/>
            <MenuItem Name="miReceipt" Header="Поступления" Click="miReceipt_Click"/>
            <MenuItem Name="miPrescription" Header="Рецепты" Click="miPrescription_Click"/>
            <MenuItem Name="miGetList" Header="Получение списка" Click="miGetList_Click"/>
            <MenuItem Name="miGetReport" Header="Отчет" Click="miGetReport_Click"/>
            <Separator />
        </Menu>

        <Image Grid.Row="1" Source="resources\Logo.jpg"/>
    </Grid>

</Window>
