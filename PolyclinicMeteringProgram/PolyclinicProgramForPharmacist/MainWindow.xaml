<Window x:Class="PolyclinicMeteringProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyclinicMeteringProgram"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" VerticalAlignment="Top" FontSize="16">
            <MenuItem Header="Лекарства"/>
            <MenuItem Header="Поступления"/>
            <MenuItem Header="Рецепты"/>
            <MenuItem Header="Получение списка"/>
            <MenuItem Header="Отчет"/>
            <Separator />
        </Menu>

        <Image Grid.Row="1" Source="resources\Logo.jpg"/>
    </Grid>

</Window>
