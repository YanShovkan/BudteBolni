<Window x:Class="PolyclinicMeteringProgram.Treatments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyclinicMeteringProgram"
        mc:Ignorable="d"
        Title="Список лечений" Height="400" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" Margin="5" AutoGenerateColumns="True" BorderBrush="Black"/>
        <Button Name="Add" Grid.Row="1" Margin="5" Content="Добавить" FontSize="16"/>
        <Button Name="Delete" Grid.Row="2" Margin="5" Content="Удалить" FontSize="16"/>
        <Button Name="Change" Grid.Row="3" Margin="5" Content="Изменить" FontSize="16"/>
        <Button Name="Cancel"  Grid.Row="4" Margin="5" Content="Отмена" FontSize="16" />
    </Grid>
</Window>
